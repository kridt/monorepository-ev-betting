{
  "name": "@ev-bets/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "validate-stats": "tsx src/scripts/validate-stats.ts",
    "update-cache": "tsx src/scripts/update-player-cache.ts",
    "cache-stats": "tsx src/scripts/update-player-cache.ts --stats",
    "update-soccer-cache": "tsx src/scripts/update-soccer-cache.ts",
    "soccer-cache-stats": "tsx src/scripts/update-soccer-cache.ts --stats",
    "prepopulate-nba": "tsx src/scripts/prepopulate-nba-players.ts"
  },
  "dependencies": {
    "@ev-bets/shared": "workspace:*",
    "@fastify/cors": "^8.4.0",
    "@libsql/client": "^0.14.0",
    "async-mutex": "^0.4.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "fastify": "^4.25.0",
    "p-limit": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "drizzle-kit": "^0.20.6",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
