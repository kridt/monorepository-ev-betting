# OpticOdds API Key (required)
OPTICODDS_API_KEY=your_api_key_here

# Server configuration
PORT=4000
HOST=0.0.0.0

# Database
DB_PATH=./data/dev.db

# Scheduler
REFRESH_INTERVAL_MS=120000

# EV Calculation
MIN_EV_PERCENT=5

# Target sportsbooks (comma-separated IDs)
TARGET_SPORTSBOOKS=betano,unibet,betway

# Sharp book for reference
SHARP_BOOK=pinnacle

# Enabled leagues (comma-separated IDs)
SOCCER_LEAGUES=england_-_premier_league,spain_-_la_liga,italy_-_serie_a,germany_-_bundesliga,france_-_ligue_1
BASKETBALL_LEAGUES=nba

# SportMonks API (for football statistics)
SPORTMONKS_API_KEY=your_sportmonks_api_key_here
SPORTMONKS_BASE_URL=https://api.sportmonks.com/v3/football

# Ball Don't Lie API (for NBA statistics)
BALLDONTLIE_API_KEY=your_balldontlie_api_key_here
BALLDONTLIE_BASE_URL=https://api.balldontlie.io
