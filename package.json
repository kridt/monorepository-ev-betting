{
  "name": "ev-bets-app",
  "version": "1.0.0",
  "private": true,
  "description": "EV betting opportunities finder for soccer and NBA",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @ev-bets/api dev",
    "dev:web": "pnpm --filter @ev-bets/web dev",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter @ev-bets/api build",
    "build:web": "pnpm --filter @ev-bets/web build",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter @ev-bets/api test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}
